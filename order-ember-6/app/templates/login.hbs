<div class="login">
  <div class="wrapper">
    <img src="./assets/images/logo-gmbhtext.svg">
    <div class="login-form">
      <form {{on 'submit' this.authenticate}}>
        <label for="identification">{{t "input.username"}}</label>
        {{input id='identification' value=this.identification}}
        <label for="password">{{t "input.password"}}</label>
        {{input id='password' type='password' value=this.password}}
        <button autofocus type="submit">{{t "button.login"}}</button>
      </form>
    </div>
    <p>{{t "copyright"}}</p>
  </div>
</div>
{{outlet}}