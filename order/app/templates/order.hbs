{{outlet}}

{{connection-indicator status=connection}}

{{order-screen
  settings=model.Settings
  categories=model.categories
  actualCategory=actualCategory
  changeCategory=(action "changeCategory")
  items=model.Items
  addItemToOrder=(action "addItemToOrder")
  showModal=(action "showModal")
  order=order
  swipeHelper=swipeHelper
}}

{{#modal-box
  triggerModal=triggerModal
  headline=modalHeadline
  modalButtons=modalButtons
}}
  {{component modalType
    currentUser=model.currentUser
    tables=model.Tables
    settings=model.Settings
    areas=model.Areas
    order=order
    showModal=(action "showModal")
    addItemToOrder=(action "addItemToOrder")
    modalItem=modalItem
    discardOrder=(action "discardOrder")
  }}
{{/modal-box}}

{{order-list
  barKeeper=barKeeper
  settings=model.Settings
  order=order
  removeItemFromOrder=(action 'removeItemFromOrder')
  saveOrder=(action "saveOrder")
  showModal=(action "showModal")
}}


{{order-overview
  settings=model.Settings
  actualOrder=actualOrder
  orders=model.Orders
  swipeHelper=swipeHelper
}}

{{order-detail-view
  settings=model.Settings
  order=actualOrder
  printBill=(action "printBill")
}}
