  {{orderlist-item data=data}}
  {{/each-in}}
</table>
<div class="flexcontainer">
  <button {{action 'showModal'}} class="tablebutton">Tisch auswählen</button>
  <p class="sum">Summe: € {{viewOrder.totalAmount}}</p>
</div>
<div class="flexcontainer">
  <button {{action 'showModal'}} class="bigbutton">Tisch auswählen</button>
</div>
