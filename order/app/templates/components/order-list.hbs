<h2>Bestellung</h2>
<table>
  {{#each-in viewOrder.items as |id data|}}
    {{orderlist-item data=data}}
  {{/each-in}}
</table>
<div class="flexcontainer">
  {{#if order.table.name}}
    <button {{action 'showModal'}} class="tablebutton">Tisch: {{order.table.name}}</button>
  {{else}}
    <button {{action 'showModal'}} class="tablebutton required">Tisch auswählen</button>
  {{/if}}
  <p class="sum">Summe: € {{viewOrder.totalAmount}}</p>
</div>
<div class="flexcontainer">
  {{#if order.table.name}}
    <button {{action 'saveOrder'}} class="bigbutton default-btn">Abschicken</button>
  {{else}}
    <button {{action 'showModal'}} class="bigbutton default-btn">Tisch auswählen</button>
  {{/if}}
</div>
<div class="flexcontainer">
  <button class="smallbutton default-btn">zurück</button>
  <button {{action 'resetOrder'}} class="smallbutton default-btn">Bestellung verwerfen</button>
</div>
