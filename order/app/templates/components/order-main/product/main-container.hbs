{{#if category}}
  {{#each category.sortedItems as |item|}}
    {{order-main/product/single-item item=item addItemToOrder=(action "addItemToOrder") showModal=(action "showModal")}}
  {{/each}}
{{else}}
  {{#each categories as |category|}}
    {{#if category.enabled}}
    {{#each category.sortedItems as |item|}}
      {{order-main/product/single-item item=item addItemToOrder=(action "addItemToOrder") showModal=(action "showModal")}}
    {{/each}}
    {{/if}}
  {{/each}}
{{/if}}