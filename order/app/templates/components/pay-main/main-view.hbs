{{yield}}
<div class="pay-main__switch ">
 <button {{action "filterButtonOrder"}} class="default-btn">{{t "order.order" count=2}}</button>
 <button {{action "filterButtonTables"}} class="default-btn">{{t "order.table" count=2}}</button>
</div>
{{#if (eq filter "orders")}}
  <div class="orders">
    <h2>{{t "order.order" count=2}}</h2>
    <div class="scrollable">
      <table>
        {{#each paidOrders as |order|}}
          {{pay-main/single-order order=order actualOrder=actualOrder goToOrderDetail=(action "orderClick")}}
        {{/each}}

        {{#each openOrders as |order|}}
          {{pay-main/single-order order=order actualOrder=actualOrder goToOrderDetail=(action "orderClick")}}
        {{/each}}
      </table>
    </div>
    <div class="flexcontainer">
      <button {{action "backButton"}} class="default-btn bigbutton">{{t "button.back"}}</button>
    </div>
  </div>
{{/if}}
{{#if (eq filter "tables")}}
  <div class="tables">
    <h2>{{t "order.table" count=2}}</h2>
    <div class="scrollable">
      {{#each tables as |table|}}
        {{#unless (eq table.openAmount 0) }}
          {{pay-main/single-table table=table actualOrder=actualOrder goToOrderDetail=(action "orderClick")}}
        {{/unless}}
      {{/each}}
    </div>
    <div class="flexcontainer">
      <button {{action "backButton"}} class="default-btn bigbutton">{{t "button.back"}}</button>
    </div>
  </div>
{{/if}}
