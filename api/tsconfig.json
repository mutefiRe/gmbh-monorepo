{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "allowJs": false,
    "moduleDetection": "force",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "mocha"]
  },
  "include": ["**/*.ts"],
  "exclude": ["dist", "docs", "node_modules", "seed", "seed/**"]
}
