<main>
  {{#if newRecord}}
    <div class="content new-record">
      <ul class="editable area-list">
        {{single-area isNew=true area=newRecord currentSelectedRecord=currentSelectedRecord}}
      </ul>
    </div>
  {{/if}}
  <div class="content">
    <ul class="editable area-list">
      {{#each model as |area|}}
        {{single-area area=area currentSelectedRecord=currentSelectedRecord}}
      {{/each}}
    </ul>
  </div>
</main>

{{main-controlbar setRecord=(action 'createRecord') currentSelectedRecord=currentSelectedRecord isNew=(if newRecord true false)}}