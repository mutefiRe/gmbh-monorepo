<div class="single-table" {{action 'toggleEditable'}}>
  <p>{{table.name}}</p>
</div>
<div class="editarea">
  <div class="input-row">
    <div class="input-element">
      <label>{{t 'labels.name'}}</label>
      {{input value=table.name}}
    </div>
    <div class="input-element">
        <label>{{t 'labels.area'}}</label>
        <div class="select-wrapper">
          <select name="area" onchange={{action "changeRelation" table}}>
            {{#each areas as |area|}}
              <option selected={{eq area.id table.area.id}} value="{{area.id}}">{{area.name}}</option>
              {{else}}
            {{/each}}
          </select>
      </div>
    </div>
  </div>
   <div class="input-row">
      <button {{action 'updateTable' table}} class="save">{{t 'buttons.save'}}</button>
      <button {{action 'destroyTable' table}} class="delete"><span class="material-icons">delete</span>{{t 'buttons.delete'}}</button>
    </div>
</div>