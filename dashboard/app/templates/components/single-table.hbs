<div class="single-table {{if isEnabled 'available'}}" {{action "toggleEditable"}} style="background:{{table.area.color}}">
  <p>{{if isNew (t 'new.table') table.name}}</p>
  <div class="singleeditindicator material-icons">mode_edit</div>
</div>
{{#if isOpen}}
<div class="editarea">
  <div class="input-row">
    <div class="input-element">
      <label>Name</label>
      {{input value=table.name}}
    </div>
    <div class="input-element">
      <label>Bereich</label>
      <div class="select-wrapper">
        <select name="area" onchange={{action "changeRelation" 'area'}}>
          {{#each areas as |area|}}
            <option selected={{eq area.id table.area.id}} value={{area.id}}>{{area.name}}</option>
          {{/each}}
        </select>
      </div>
    </div>
  </div>
   <div class="input-row">
      <button {{action 'toggleButton' 'enabled'}} class="{{if table.enabled 'toggle' 'gray'}}">{{if table.enabled 'aktiviert' 'deaktiviert'}}</button>
      <button {{action 'updateTable' table}} class="save">Speichern</button>
      {{#unless isNew}}<button class="delete" {{action "destroyTable"}}><span class="material-icons">delete</span>LÃ¶schen</button>{{/unless}}
    </div>
</div>
{{/if}}