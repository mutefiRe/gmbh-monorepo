<div class="single-table" {{action 'toggleEditable'}}>
  <p>{{table.name}}</p>
</div>
{{#if isOpen}}
<div class="editarea">
  <div class="input-row">
    <div class="input-element">
      <label>Name</label>
      {{input value=table.name}}
    </div>
    <div class="input-element">
        <label>Bereich</label>
        <div class="select-wrapper">
          <select name="area" onchange={{action "changeRelation" table}}>
            {{#each areas as |area|}}
              {{#if (eq area.id table.area.id)}}
               <option value="{{area.id}}" selected>{{area.name}}</option>
              {{else}}
                <option value="{{area.id}}" >{{area.name}}</option>
              {{/if}}
            {{/each}}
          </select>
      </div>
    </div>
  </div>
   <div class="input-row">
      <button {{action 'updateTable' table}} class="save">Speichern</button>
      <button {{action 'destroyTable' table}} class="delete"><span class="material-icons">delete</span>LÃ¶schen</button>
    </div>
</div>
{{/if}}