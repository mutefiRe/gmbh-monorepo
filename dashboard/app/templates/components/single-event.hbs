<div class="single-event">
  <h3>{{name}}</h3>
  <p>{{beginDate}} â€“ {{endDate}}</p>
</div>
<div class="editsingleevent editarea">
  <div class="input-row align-left">
    <div class="input-element">
      <label for="name">Name</label>
      <input type="text" name="type" value="{{name}}">
    </div>
    <div class="input-element">
      <label for="name">Startdatum</label>
      {{bootstrap-datepicker format="dd.mm.yyyy" startDate=todaysDate value=beginDate}}
    </div>
    <div class="input-element">
      <label for="name">Enddatum</label>
      {{bootstrap-datepicker format="dd.mm.yyyy" startDate=todaysDate value=endDate}}
    </div>
  </div>
  <div class="input-row align-left">
    <div class="input-element">
      <label for="printer">Drucker</label>
      <div class="select-wrapper">
        <select name="printer">
          {{#each printers as |printer|}}
            <option value="{{printer.name}}">{{printer.name}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="input-element">
      <label for="expirationtime">Laufzeit</label>
      <input type="number" value="{{expiresTime}}">
    </div>
    <div class="input-element">
      <label for="name">Name (versteckt)</label>
      <input type="text" name="type" value="{{eventName}}">
    </div>
  </div>
  <div class="input-row">
    <button
    {{action 'toggleButton' "customTables" customTables}} class="{{if customTables 'green' 'gray'}}" type="button">Benutzer&shy;definierte Tische {{if customTables 'aktiviert' 'deaktiviert'}}</button>
    <button {{action 'toggleButton' "instantPay" instantPay}} class="{{if instantPay 'green' 'gray'}}" type="button">Sofort&shy;bezahlung {{if instantPay 'aktiviert' 'deaktiviert'}}</button>
    <button {{action 'toggleButton' "showItemPrice" showItemPrice}} class="{{if showItemPrice 'green' 'gray'}}" type="button">Preis auf Produkte {{if showItemPrice 'aktiviert' 'deaktiviert'}}</button>
    <button {{action 'toggleButton' "waiterAccess" waiterAccess}} class="{{if waiterAccess 'green' 'gray'}}" type="button">Kellner&shy;zugriffs&shy;berechtigung {{if waiterAccess 'aktiviert' 'deaktiviert'}}</button>
  </div>
</div>