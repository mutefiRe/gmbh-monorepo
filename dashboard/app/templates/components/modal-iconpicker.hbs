{{#if showModal}}
  {{#modal-dialog
          onClose=(action (mut showModal) false)
          clickOutsideToClose=true
          overlayClass='modal'
          containerClass="modal-content"
  }}
  <div class="modal-close material-icons" onclick={{action (mut showModal) false}}>close</div>
  <div class="pickable-container">
    {{#each icons as |icon|}}
    <div class="pickable-wrapper" {{action 'selectAndClose' icon}}>
      <span class="iconfont {{icon}}"></span>
    </div>
    {{/each}}
  </div>
  {{/modal-dialog}}
{{/if}}