{
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "semi": [1, "always"],
    "comma-dangle": [2,"never"],
    "no-cond-assign": [2,"always"],
    "no-console": 1,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty-character-class": 2,
    "no-empty": 1,
    "no-ex-assign": 2,
    "no-extra-parens": [1,"all"],
    "no-extra-semi": 2,
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": 1,
    "no-negated-in-lhs": 1,
    "no-obj-calls": 2,
    "no-regex-spaces": 1,
    "no-sparse-arrays": 1,
    "no-unreachable": 2,
    "use-isnan": 2,
    "valid-typeof": 2,
    "curly": [1,"multi-line"],
    "default-case": 2,
    "dot-notation": 1,
    "eqeqeq": 1,
    "guard-for-in": 1,
    "no-alert": 1,
    "no-else-return": 1,
    "no-fallthrough": 2,
    "no-new": 1,
    "no-octal": 1,
    "no-redeclare": 2,
    "no-delete-var": 2,
    "no-unused-vars": 1,
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "no-mixed-spaces-and-tabs": ["error"],
    "no-new-object": 1,
    "arrow-parens": [1, "as-needed"],
    "arrow-spacing": 1,
    "constructor-super": 1,
    "generator-star-spacing": 1,
    "no-class-assign": 1,
    "no-const-assign": 1,
    "no-this-before-super": 1,
    "no-var": 1,
    "object-shorthand": 1,
    "prefer-const": 1,
    "prefer-spread": 1,
    "prefer-reflect": 1,
    "require-yield": 1,
    "space-before-function-paren":0,
    "spaced-comment": 2,
    "space-unary-ops": [
    1, {
      "words": true,
      "nonwords": true,
      "overrides": {
        "new": true,
        "++": false,
        "--": false,
        "[":  false,
        "]":  false,
        "!":  false
      }
    }
    ],
    "space-infix-ops": 1
  }
}
